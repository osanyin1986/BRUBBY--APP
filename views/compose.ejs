<%- include("partials/header"); -%>

<h1>Compose</h1>

<div class="container-fluid" style="background-color:#f1f3f4" onclick="closeNav()">
<h2 class="add-products">Add Products</h2>
<form action="/compose" method="POST" enctype="multipart/form-data">
<div class="form-group">
<label for="pi" class="color-text">Product Id:</label>
<input type="text" class="form-control" id="pi" name="productId" required minlength="3">
</div>
<div class="form-group">
<label for="pn" class="color-text">Product Name:</label>
<input type="text" class="form-control" id="pn" name="productName" required minlength="8" maxlength="20">
</div>

<div class="form-group">
<label for="pp" class="color-text blockelement">Price:</label>
<input type="num" id="pp" name="prize" required>
</div>
<div class="form-group">
<label for="imge" class="color-text">Select image:</label>
<input type="file" id="imge" name="img" accept="image/*" max-size="2000">
</div>
<button type="submit" class="btn btn-success">Submit</button>
</form>
</div>
<%- include("partials/footer"); -%>
